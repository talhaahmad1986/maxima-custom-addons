<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="report_partnerledger2">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
        <div id="informations" class="row mt32 mb32">
            <div class="page">
            <h2><span t-esc="env.company.name"/>: Partner Ledger</h2>
        </div>
        </div>
        <div class="page">
            <table class="table table-sm table-reports">
                <thead>
                                <th>No</th>
                                <th>Date</th>
                                <th>SL.NO</th>
                                <th>Ref. No</th>
                                <th>ET</th>
                                <th>Remarks</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Balance</th>
                </thead>
                <tbody>
                    <t t-foreach="groupby" t-as="partner" style="font-weight: bold;">
                            <tr>
                                <td colspan="7">

                                    <strong>Account:</strong> <span t-esc="partner"/>
                                </td>
                            </tr>
                            <tr t-foreach="members.get(partner)" t-as="led">
                                <tr colspan="10">
                                <td><span t-esc="led['sn_no']"/></td>
                                <td><span t-esc="led['date']"/></td>
                                <td><span t-esc="led['sl_no']"/></td>
                                <td><span t-esc="led['ref_no']"/></td>
                                <td><span t-esc="led['et']"/></td>
                                <td ><span t-esc="led['remarks']"/></td>
                                <td ><span t-esc="led['debit']"/></td>
                                <td ><span t-esc="led['credit']"/></td>
                                <td ><span t-esc="led['balance']"/></td>
                                </tr>
                            </tr>
                        </t>

                </tbody>
            </table>
        </div>

